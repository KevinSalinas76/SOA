SELECT * FROM actividades

CREATE TABLE actividades (
    id SERIAL PRIMARY KEY,
    titulo VARCHAR(255) NOT NULL,
    descripcion TEXT, 
    fecha DATE,
    hora TIME,
    estatus VARCHAR(50) DEFAULT 'Pendiente',
    prioridad INTEGER DEFAULT 3,
    enabled BOOLEAN DEFAULT TRUE
);
